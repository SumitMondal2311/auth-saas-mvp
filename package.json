{
    "name": "auth-saas-mvp",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "check-types": "turbo check-types",
        "clean": "turbo clean",
        "db:deploy": "dotenv -e apps/backend/.env.local -- pnpm -F @repo/database db:deploy",
        "db:generate": "dotenv -e apps/backend/.env.local -- pnpm -F @repo/database db:generate",
        "db:migrate": "dotenv -e apps/backend/.env.local -- pnpm -F @repo/database db:migrate",
        "db:push": "dotenv -e apps/backend/.env.local -- pnpm -F @repo/database db:push",
        "db:studio": "dotenv -e apps/backend/.env.local -- pnpm -F @repo/database db:studio",
        "dev": "turbo dev",
        "docker:down": "docker-compose --env-file docker/.env.local -f docker/docker-compose.yml down -v",
        "docker:up": "docker-compose --env-file docker/.env.local -f docker/docker-compose.yml up -d",
        "format": "prettier --write \"**/*.{json,js,mjs,ts,jsx,tsx}\"",
        "lint": "eslint . --ext .tx,.tsx",
        "prepare": "husky",
        "start": "turbo start",
        "start:dev": "turbo start:dev"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "dependencies": {
        "dotenv": "^17.2.2",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "dotenv-cli": "^10.0.0",
        "eslint": "^9.35.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "turbo": "^2.5.6",
        "typescript": "^5.9.2"
    },
    "packageManager": "pnpm@10.15.1",
    "engines": {
        "node": ">=18"
    }
}
